
<main>
 <div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">Login </div>
      <div class="card-body">
        <form action="/usuarios/login" method="post">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{body.email}}">
            <p class="errText">{{mensaje.usuario}}</p>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
            <p class="errText">{{mensaje.password}}</p>
          </div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Iniciar sesión">
          </div>

          <div class="form-group">
            <p><a href="/views/usuarios/registrarse.hbs">Regístrate</a></p>
            <p><a href="/views/usuarios/registrarse.hbs">Olvidaste tu Contraseña</a></p>
          </div> 
            
       
        </form>
      </div>
     
    </div>
    <div class="row">
      <div class="col-12">
        <p>{{mensaje}}</p>
      </div>
    </div>
  </div> 
</div> 

